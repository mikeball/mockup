<%{:parent "../site-public.tpl"}%>

<h1>Please Choose a new Password</h1>

<div class="block">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Confirm Password</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="" placeholder="Confirm Password">
            </div>
        </div>
        <div style="text-align:center;">
            <a href="../login" class="btn btn-primary" role="button">
                Reset Password
            </a>
        </div>
    </form>
</div>